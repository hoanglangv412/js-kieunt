@model js_kieunt.Models.Blog

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Blogs</h2>
<style>
    textarea{
        width:100%;
        height:300px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Tiêu đề</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BlogName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BlogName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Mô tả ngắn</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BlogShortDetail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BlogShortDetail, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Chi tiết</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.BlogDetail)
            @Html.ValidationMessageFor(model => model.BlogDetail, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Hình ảnh</label><br />
        @Html.TextBoxFor(model => model.BlogPhoto, new { type = "file" })
        @Html.ValidationMessageFor(model => model.BlogPhoto)
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Loại</label><br />
        @Html.DropDownListFor(model => model.BlogType, new List<SelectListItem>
        {
           new SelectListItem{ Text="Giai tri", Value = "Giai tri" },
           new SelectListItem{ Text="Thoi Su", Value = "Thoi Su" },
           new SelectListItem{ Text="The Thao", Value = "The Thao" },
           new SelectListItem{ Text="Cong Nghe", Value = "Cong Nghe" },
           new SelectListItem{ Text="ShowBiz", Value = "ShowBiz" },
        }, new { @style = "margin-left:15px" })
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Vị trí</label>
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.BlogAddress, "Viet nam")<label class="col-sm-2 col-form-label">Viet Nam</label><br />
            @Html.RadioButtonFor(model => model.BlogAddress, "Chau a")<label class="col-sm-2 col-form-label">Chau a</label><br />
            @Html.RadioButtonFor(model => model.BlogAddress, "Chau au")<label class="col-sm-2 col-form-label">Chau au</label><br />
            @Html.RadioButtonFor(model => model.BlogAddress, "Chau my")<label class="col-sm-2 col-form-label">Chau my</label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Public</label>
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.BlogStatus, "True")<label class="col-sm-2 col-form-label">Yes</label><br />
            @Html.RadioButtonFor(model => model.BlogStatus, "False")<label class="col-sm-2 col-form-label">No</label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-form-label">Date Public</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BlogPostedDate, new { htmlAttributes = new { placeholder = DateTime.Now.ToString(), @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.BlogPostedDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <p>
                    <input type="submit" value="Submit" class="btn btn-success" />
                    <input type="reset" value="Clear" class="btn btn-primary" />
                </p>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ShowAllBlogs")
</div>
