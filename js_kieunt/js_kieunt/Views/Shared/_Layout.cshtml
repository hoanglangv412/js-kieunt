<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3 px-1 bg-dark position-fixed" id="sticky-sidebar">
                <ul class="list-unstyled components">
                    <li class="active">
                        @Html.ActionLink("List", "ShowAllBlogs", "Blog")
                    </li>
                    <li>
                        @Html.ActionLink("New", "AddNewBlog", "Blog")
                    </li>
                    <li>
                        @Html.ActionLink("Search", "SearchBlog", "Blog")
                    </li>
                    <li>
                        @Html.ActionLink("Edit", "EditBlog", "Blog")
                    </li>
                </ul>
            </div>
            <div class="col offset-3" id="main">
                @RenderBody()
            </div>
            <footer>
                <p style="background-color: Yellow;text-align:center ; color:blue">© @DateTime.Now.ToLocalTime()</p> @*Add Date Time*@
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
